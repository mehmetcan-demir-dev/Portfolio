@model List<Portfolio.DAL.Entities.About>
<section id="about" class="s-about target-section">
    @foreach (var item in Model)
    {
        int birthYear = 2002; // Doğum yılı
        int currentYear = DateTime.Now.Year;
        int age = currentYear - birthYear;

        int experience1Start = 2023;
        int calcExperience1 = DateTime.Now.Year - experience1Start;

        int experience2Start = 2021;
        int calcExperience2 = DateTime.Now.Year - experience2Start;

        <div class="row narrow section-intro has-bottom-sep">
            <div class="col-full text-center">
                <h3>@item.Title</h3>
                <h1>@item.SubDescription</h1>
                <p class="lead">
                    @($"{age} ")
                    yasimdayim. @($"{calcExperience1}") senedir profesyonel IT Uzmani olarak ve @($"{calcExperience2}") senedir de Freelancer Web Developer olarak calismaktayim. ISO 27001 Bas Denetci Egitimi ve ITIL4 gibi egitimlerin Udemy sertifikasina sahibim.
                </p>
            </div>
        </div>
    }
    <div class="row about-content">

        <div class="col-six tab-full left">
            <h3>Kisaca.</h3>

            <p>Ben Mehmetcan Demir. 2002'de Izmir'de dogdum ve buyudum. 2012'de ilkokulu, 2016'de ortaokulu, 2023'de universiteyi bitirdim. Egitim hayatim boyunca takim ve bireysel sporlara ilgi duydum ve bu sporlarda once sinifimi sonra okulumu temsil etme gururuna eristim. </p>

            <p>
                Yapmak istedigim her seyde surekli olarak gelismeyi ve kendimi daha iyi hale geitrmeyi amacladim. Hedeflerimi belirlerken, surekli olarak daha etkili, verimli ve yaratici cozumler bulmaya odaklandim. Her adimda, mevcut seviyemi asmakla kalmadim, ayni zamanda karsilastigim her zorlugu ustesinden gelerek her yeni deneyimi kendi gelisimim icin firsat olarak gordum. Bu yaklasim sayesinde, her gecen gun daha yetkin bir profesyonel olmaya calistim. Ileriye dogru her adimi attigimda, sadece potansiyelimi kesfetmekle kalmadim, ayni zamanda isime ve cevreme deger katmak icin caba gosterdim.                
            </p>
        </div>
        @await Component.InvokeAsync("_SkillComponentPartial");


    </div> <!-- end about-content -->

    <div class="row about-content about-content--buttons">
        <div class="col-six tab-full left">
            <a href="~/files/MehmetcanDemir_CV.pdf" class="btn btn--primary full-width" download="MehmetcanDemir_CV.pdf">OZGECMISIM</a>
        </div>
        <div class="col-six tab-full right">
            <a href="#contact" title="contact" class="btn full-width smoothscroll">Is Birligi ve Hizmet Istegi</a>
        </div>
    </div>

    @await Component.InvokeAsync("_ExperienceComponentPartial")


</section> <!-- end about -->
@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    var skills = ViewBag.Skills as List<Skill>;

    int IT = DateTime.Now.Year - 2023;
    int Developing = DateTime.Now.Year - 2022;
}
<div class="dashboard" style="margin-top:80px; margin-left:80px;">
    <div class="row align-items-start">
        <div class="col-md-3">
            <div class="card card-tasks">
                <div class="card-header">
                    <h4 class="card-title">Yapılacaklar</h4>
                    <p class="card-category">Yapılacak Listesi</p>
                </div>
                <div class="card-body">
                    <div class="table-full-width">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input select-all-checkbox" type="checkbox" data-select="checkbox" data-target=".task-select">
                                                <span class="form-check-sign"></span>
                                            </label>
                                        </div>
                                    </th>
                                    <th>Yapılacak</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input task-select" type="checkbox" @(item.Status ? "checked" : "")>
                                                    <span class="form-check-sign"></span>
                                                </label>
                                            </div>
                                        </td>
                                        <td style="@(item.Status ? "text-decoration: line-through;" : "")">
                                            @item.Title
                                        </td>
                                        <td>@item.Date.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="now-ui-icons loader_refresh spin"></i> 3 gün önce güncellendi.
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Dunya Haritasi</h4>
                    <p class="card-category">Rastgele boyanmis dunya haritasidir.</p>
                </div>
                <div class="card-body">
                    <div class="mapcontainer">
                        <div class="map">
                            <span>Harita için alternatif içerik.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-card-no-pd" style="margin-right:120px;">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <p class="fw-bold mt-1">Sertifika ve Diplomalar</p>
                    <h4><b>3</b></h4>
                    <a href="#" class="btn btn-success btn-full text-center mt-3 mb-3"><i class="la la-arrows"></i> Belgelere Git</a>
                </div>
                <div class="card-footer">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="btn btn-default btn-link" href="~/files/MehmetcanDemir_CV.pdf" target="_blank">
                                <i class="la la-folder-open"></i> Görüntüle
                            </a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="btn btn-default btn-link" href="~/files/MehmetcanDemir_CV.pdf" download>
                                <i class="la la-cloud-download"></i> İndir
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card">
                @foreach (var skill in skills)
                {
                    <div class="card-body" style="height:55px;">
                        <div class="progress-card">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">@skill.Title</span>
                                <span class="text-muted fw-bold"> @skill.Value%</span>
                            </div>
                            <div class="progress mb-2" style="height: 4px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @skill.Value%"
                                     aria-valuenow="@skill.Value" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-stats">
                <div class="card-body">
                    <p class="fw-bold mt-1">Genel Deneyim</p>
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center icon-warning">
                                <i class="la la-pie-chart text-warning"></i>
                            </div>
                        </div>
                        <div class="col-7 d-flex align-items-center">
                            <div class="numbers">
                                <p class="card-category">Bilgi Islem</p>
                                <h4 class="card-title">@IT Yil</h4>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-5">
                            <div class="icon-big text-center">
                                <i class="la la-heart-o text-primary"></i>
                            </div>
                        </div>
                        <div class="col-7 d-flex align-items-center">
                            <div class="numbers">
                                <p class="card-category">Programlama</p>
                                <h4 class="card-title">@Developing Yil</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


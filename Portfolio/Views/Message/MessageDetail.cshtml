@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}
<input type="hidden" asp-for="MessageID" />
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesaj Görüntüleme Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Gonderici : <b>@Model.NameSurname</b><br />
                            Tarih : <b>@Model.SendDate.ToShortDateString()</b> <br />
                            Gonderen : @Model.Email<br /><br /><br />
                            Mesaj: @Model.MessageDetail
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
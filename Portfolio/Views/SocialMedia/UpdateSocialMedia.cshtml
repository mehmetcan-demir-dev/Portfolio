@model SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
} 
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgisi Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <label>Unvan</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Telefon 1</label>
                            <input type="text" asp-for="URL" class="form-control" />
                            <br />
                            <label>Telefon 2</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model List<Document>
@{
    ViewData["Title"] = "DocumentList";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Buradan deneyimlerinizi düzenleyebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Aksiyon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DocumentID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Document/UpdateDocument/@item.DocumentID" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/Document/CreateDocument/" class="btn btn-primary">Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgisi Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <label>Unvan</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Telefon 1</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Telefon 2</label>
                            <input type="text" asp-for="Comment" class="form-control" />
                            <br />
                            <label>Eposta 1</label>
                            <input type="text" asp-for="ImageURL" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model List<Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";

    var sortedModel = Model.OrderByDescending(e => e.ExperienceID).ToList();
    int counter = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Buradan deneyimlerinizi düzenleyebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Unvan</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in sortedModel)
                                {
                                    counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>@item.Head</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
